<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/general_margin"
        android:layout_marginTop="8dp"
        />

    <include
        android:id="@+id/card_delivery_status_home"
        layout="@layout/card_delivery_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@+id/search"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <include
        android:id="@+id/favorite_restaurant_card"
        layout="@layout/favorite_restaurant_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:color="@color/bg_color_light"
        android:layout_marginHorizontal="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@+id/card_delivery_status_home"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lo_mastop_home"
        style="@style/TitleTextStyle"
        android:layout_width="170dp"
        android:layout_height="41dp"
        android:layout_marginHorizontal="@dimen/general_margin"
        android:layout_marginStart="16dp"
        android:text="@string/top_of_week"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/general_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_restaurant_card"
        tools:layout_editor_absoluteY="482dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>