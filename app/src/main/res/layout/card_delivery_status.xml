<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primaryColor"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/delivery_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/general_margin"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro_display_semi_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/arrowView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Delivery to home" />

        <TextView
            android:id="@+id/delivery_status_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Direccion de entrega: Tulipan 15"
            app:layout_constraintTop_toBottomOf="@+id/delivery_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/general_margin"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/sf_pro_display_regular"
            android:textSize="16sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delivery_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_primary_button"
            android:backgroundTint="@color/white"
            android:padding="16dp"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="@dimen/general_margin"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delivery_status_details"
            tools:text="2.5hrs" />

        V
        <ImageView
            android:id="@+id/arrowView"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_arrow_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/general_margin"
            android:layout_marginEnd="@dimen/general_margin"
            android:contentDescription="@null"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>