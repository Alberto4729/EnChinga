<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidCourse" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="Theme.AndroidCourse" parent="Base.Theme.AndroidCourse" />

    <style name="TitleTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="TitleWelcomeTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_welcome_size</item>
    </style>

    <style name="SubtitleTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textColor">@color/subtitle_gray_color</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="HintTextInputLayout" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/hint_input_layout_size</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:background">@drawable/bg_edit_text_input_layout</item>
    </style>

    <style name="TextLinkStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/general_elevation</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SecondaryButtonStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:elevation">@dimen/general_elevation</item>
        <item name="android:background">@drawable/bg_secondaty_button</item>
    </style>

    <style name="MiniTextViewStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textColor">@color/subtitle_gray_color</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>
</resources>